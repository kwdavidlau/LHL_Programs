<h1>Rotten Mangoes</h1>
   <%= link_to "Movies", movies_path %>
   <br>
   <%= link_to "Submit a movie!", new_movie_path %>
   <hr>

   <div class="container">
     <h2>Movies</h2>


     <%= form_tag movies_path, method: "get" do %>
      <p>
        <%= label_tag(:title, "Title:") %>
        <%= text_field_tag :title, params[:title] %>
      </p>
      <p>
        <%= label_tag(:director, "Director:") %>
        <%= text_field_tag :director, params[:director] %>
      </p>
      <p>
        <%= label_tag(:runtime_in_minutes, "Runtime:") %>
        <%= select_tag :runtime_in_minutes, options_for_select(["Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"]), prompt: 'Select'%>
      </p>
      <%= submit_tag "Search", name: nil %>
     <% end %>
     <br>

     <table class="table table-striped">
       <thead>
         <tr>
           <th><%= link_to "Movie", movies_path(sort: :poster_image_url), class: "deco-none"%></th>
           <th><%= link_to "Movie Title", movies_path(sort: :title), class: "deco-none"%></th>
           <th><%= link_to "Release Date", movies_path(sort: :release_date), class: "deco-none"%></th>
           <th><%= link_to "RunTime (minutes)", movies_path(sort: :runtime_in_minutes), class: "deco-none"%></th>
           <th><%= link_to "Director", movies_path(sort: :director), class: "deco-none"%></th>
           <th><%= link_to "Description", movies_path(sort: :description), class: "deco-none"%></th>
           <!-- <th> URL </th> -->
         </tr>
       </thead>
       <tbody>
          <%= render 'movie' %>
       </tbody>
     </table>
   </div>
